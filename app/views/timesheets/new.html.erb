<section class="timesheet-uuid container px-4 sm:px-8" id="<%= @timesheet.uuid %>">
<h1 id="date" class="helvetica italic px-8 py-8 text-gray-600 text-3xl tracking-wide"><%= @timesheet.date %></h1>
  <span class="form-status float-right text-gray-500 tracking-wide italic"></span>
  <h2 class="font-light helvetica italic px-8 pb-8 text-gray-900 text-lg tracking-wide">What are you going to do today?</h2>
  <form id="timesheet" class="flex" data-remote="true">  
    <div class="w-1/5 current-column time-column" id="timecolumn-1">
      <div class="border-blue-400 border-l-2 time-block">
        <div class="pl-2">
          <%= text_field_tag :time_start, nil, placeholder: "", class: "time-start time-init font-thin" %>
        </div>
        <div class="pl-4 py-4">
          <%= text_area_tag :task_body, nil, placeholder: "Task at hand", rows: 3 ,class: "task-body helvetica italic p-2 tracking-wide font-light text-gray-900" %>
        </div>
        <div class="pl-2">
          <%= text_field_tag :time_last, nil, placeholder: "", class: "time-last time-last-init time-block-last font-thin" %>
        </div>
      </div>
      <button class="flex ml-8 mt-8 mb-32 w-48" id="add-block-button">
        <div class="bg-gray-400 h-8 relative w-8" id="plus-sign"></div>
        <span class="time-block-text font-light helvetica italic pt-1 text-white tracking-wide w-40">Add New Time Block</span>
      </button>
    </div>
  </form>
</section>
<%= render 'partials/toolbar' %>