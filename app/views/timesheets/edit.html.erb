<%= render 'partials/errors', obj: @timesheet %>
<section class="timesheet-uuid container px-4 sm:px-10" id="<%= @timesheet.uuid %>">
  <div class="inline-flex w-full">
    <h1 id="date" class="helvetica italic px-8 py-8 text-gray-600 text-3xl tracking-wide w-2/3"><%= @timesheet.date %></h1>
    <span class="form-status float-right text-gray-500 tracking-wide py-8 italic w-1/3"></span>
  </div>
  <h2 class="font-light helvetica italic px-8 text-gray-900 text-lg tracking-wide">What are you going to do today?</h2>
  <form id="timesheet" class="flex" data-remote="true">
    <div class="w-1/5 current-column time-column" id="timecolumn-1">
      <% if @timesheet.timeblock != nil %>
        <% @timesheet.timeblock.each do |key, value| %>
          <div class="border-blue-400 border-l-2 time-block my-12">
            <div class="pl-2">
              <input value="<%= @timesheet.timeblock[key]["time_start"] %>" class="time-start font-thin" type="text" name="timesheet[time_start]" id="timesheet_time_start">
            </div>
            <div class="pl-4 py-4">
              <textarea placeholder="Task at hand" rows="3" class="task-body helvetica italic p-2 tracking-wide font-light text-gray-900" name="timesheet[task_body]" id="timesheet_task_body"><%= @timesheet.timeblock[key]["task_body"] %></textarea>
            </div>
            <div class="pl-2">
              <input value="<%= @timesheet.timeblock[key]["time_last"] %>" class="time-last time-last-init time-block-last font-thin" type="text" name="timesheet[time_last]" id="timesheet_time_last">
            </div>
          </div>
        <% end %>
      <% else %>
        <%= render 'partials/timeblock' %>
      <% end %>
      <button class="flex ml-8 mt-8 mb-32 w-48" id="add-block-button">
        <div class="bg-gray-400 h-8 relative w-8" id="plus-sign"></div>
        <span class="time-block-text font-light helvetica italic pt-1 text-white tracking-wide w-40 text-sm">Add New Time Block</span>
      </button>
    </div>
  </form>
</section>
<%= render 'partials/toolbar' %>