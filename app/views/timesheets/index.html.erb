<h1 class="font-light text-center helvetica italic px-8 py-8 text-gray-600 text-3xl tracking-wide">Deep Work Planner</h1>
<a href="<%= new_timesheet_path %>" class="bg-white block border border-red-800 font-thin helvetica hover:bg-red-800 hover:text-red-100 italic mx-auto my-4 no-underline py-3 rounded shadow-lg text-center text-red-800 w-48">
  New Timesheet
</a>

<div class="flex flex-wrap">
  <% @timesheets.each do |timesheet|%>
  <a href="<%= edit_timesheet_path(timesheet) %>" class="no-underline text-gray-600">
    <div class="bg-gray-200 block border hover:shadow-lg m-8 pb-2 px-3 rounded sm:w-1/4">
      <div class="flex justify-between">
        <h1 class="helvetica p-2 text-gray-600" id="date"><%= timesheet.date %></h1>
        <a data-confirm="Are you sure you want to delete the timesheet?" class="z-20" data-method="delete" href="<%= timesheet_path(timesheet) %>">
          <%= inline_svg "trash.svg", class: 'icon options h-6 w-6 mt-2'%>
        </a>
      </div>

      <div class="bg-white rounded shadow">
        <ul class="task-list">
            <% timesheet.timeblock.each do |key, value| %>
              <% next if timesheet.timeblock[key]["task_body"] == "" %>
              <li class="p-2 text-gray-700"><%= timesheet.timeblock[key]["time_start"] %>: <%= truncate(timesheet.timeblock[key]["task_body"], length: 40) %></li>
            <% end %>
        </ul>

        <small class="flex justify-between mx-auto p-2 text-gray-600">
          <p><%= timesheet.user.username if timesheet.user %></p>
          <p><%= time_ago_in_words(timesheet.created_at) %> ago</p>
        </small>
      </div>
    </div>
  </a>
  <% end %>
</div>

<% content_for :javascripts do %>
  <script>
    var i = 0;    
    $('.task-list').each(function() {          
      i++;
      var newID = 'list-'+i;
      $(this).attr('id',newID);

      if ($('#list-'+ i +' li').length == 0) {
      $(this).append('<li class="p-2 text-gray-700">No Tasks Yet</li>');
    }  
    });
  </script>
<% end %>